{
  "name": "advance-jwt-auth",
  "version": "1.0.0",
  "description": "Advanced JWT authentication boilerplate with refresh tokens, logging, and best practices.",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "src/server.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node --enable-source-maps src/server.js",
    "dev": "nodemon --legacy-watch src/server.js",
    "lint": "eslint . --fix",
    "format": "prettier -w .",
    "health": "node -e \"require('http').get('http://localhost:'+(process.env.PORT||3000)+'/health',r=>{console.log(r.statusCode);process.exit(r.statusCode===200?0:1);}).on('error',()=>process.exit(1));\""
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.17.1",
    "morgan": "^1.10.1",
    "ms": "^2.1.3",
    "sanitize-html": "^2.17.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "prettier": "^3.6.2"
  }
}
